<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eus.ehu.intel.tta.tta">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--FILE EXTERNAL-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--camera-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Screens.ScreensLogin"
            android:label="@string/title_activity_screens_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.ScreensBase"
            android:label="@string/title_activity_screens_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Screens.ScreenMenu"
            android:label="@string/title_activity_screen_menu"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Screens.ScreensExercise"
            android:label="@string/title_activity_screen_exercise"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Screens.ScreenTest"
            android:label="@string/title_activity_screen_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
